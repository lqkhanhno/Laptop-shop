    <servlet-mapping>
        <servlet-name>EditFAQController</servlet-name>
        <url-pattern>/editfaq</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            -1
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
